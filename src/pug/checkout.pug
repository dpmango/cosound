---
title: MARKETPLACE - CHECKOUT
---
extends shared/_layout

block header
  include components/headers/_header-dash
  
block content
  
  // MARKETPLACE CART
  .product
    .container.container--wide
  
      .product__wrapper
        .product__content
          // box
          .product__box
            .product__title Saved Payment Options
            .cart-payments
              // cart item
              .cart-payment.is-selected(js-radio)
                .cart-payment__checkbox
                  input(type="radio" name="payment" id="payment_1")
                .cart-payment__image
                  img(src='img/suggestionCard-avatar-2.jpg' srcset='img/suggestionCard-avatar-2@2x.jpg 2x')
                .cart-payment__name Mr Joe Bloggs
                .cart-payment__secured **** 9789
              // cart item
              .cart-payment(js-radio)
                .cart-payment__checkbox
                  input(type="radio" name="payment" id="payment_1")
                .cart-payment__image
                  i.icon.icon-pay-mastercard-old
                .cart-payment__name Credit card
                .cart-payment__secured **** 0079
            // more
            .cart-payments__more
              a(href="#")
                span Add Payment Option
                .cart-payments__more-icon
                  +icon('ico-plus')
            
              
        //sidebar
        .product__sidebar.cart-sidebar
          .cart-sidebar__wrap
            .cart-sidebar__title Summary
            .cart-sidebar__table
              .cart-sidebar__line
                span Subtotal
                span $199
              .cart-sidebar__line
                span Tax
                span -
            
            .cart-sidebar__summary
              .cart-sidebar__subtitle Service Summary
              ul.product-sidebar__list
                li.is-time 3 days
                li 3000 Blog Posts 200 
                li Radi Stations
                
          .cart-sidebar__bottom
            .cart-sidebar__table.cart-sidebar__table--bold
              .cart-sidebar__line
                span Total
                span $199
              .cart-sidebar__line
                span Delivery Time
                span 3 days
                
            .cart-sidebar__cta
              a(href="#").btn.btn-primary.btn-primary--red
                span Place payment
          
          .cart-sidebar__payments
            .cart-sidebar__payments-logos
              i.icon.icon-pay-discover
              i.icon.icon-pay-visa
              i.icon.icon-pay-maestro-old
              i.icon.icon-pay-jcb
              i.icon.icon-pay-paypal
              i.icon.icon-pay-amex
              i.icon.icon-pay-mastercard-old    
            .cart-sidebar__payments-title Payment Methods Accepted
          
          .cart-sidebar__ssl
            .cart-sidebar__ssl-icon
              +icon('ico-ssl')
            .cart-sidebar__ssl-title Secure Payment SLL Lorem
              
              
