---
title: Login
---
extends shared/_layout

block header
  include components/_header-login
  
block footer
  include components/_footer-mini
  
block content
  
  // HERO
  .login
    .login__bg
      .login__bg-wrapper
        include ../inline-svg/hero-bg-login.svg
    .container
      .login__wrapper
        .heading Log  in
        //form
        form(action="#" js-validate-login).login-form
          .ui-group
            input(type="email" name="email" placeholder="Email")
          .ui-group
            input(type="password" name="password" placeholder="Password")
          .login-form__row
            .ui-checkbox
              input(type="checkbox" name="remember" id="remember" checked)
              label(for="remember")
                span Remember me
            a(href="recover.html") Forgot Password?
          .login-form__cta
            button(type="submit").btn.btn-primary.btn-primary--red
              span Login
              
        .login-form__socials
          a(href="#").btn.btn-social.btn-social--fb
            +icon('ico-social-fb')
            span Facebook login
          
          a(href="#").btn.btn-social.btn-social--tw
            +icon('ico-social-tw')
            span Twitter login
            
          a(href="#").btn.btn-social.btn-social--gplus
            +icon('ico-social-gplus')
            span Google login
