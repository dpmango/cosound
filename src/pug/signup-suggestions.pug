                      img(src="img/suggestionCard-avatar-3.jpg" srcset='img/suggestionCard-avatar-3@2x.jpg 2x')
                  .card-suggestion__name Hubert Blaine Wolfeschlegelsteinhausenbergerdorff
                  .card-suggestion__position Job Title/Artist Name.
                  .card-suggestion__cta.is-added
                    +icon('ico-plus')
                    +icon('ico-check')
              .suggestions__card(js-fake-addSuggestionCard)
                // card
